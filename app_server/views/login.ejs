<!-- views/login.ejs -->
<!doctype html>
<html>

<head>

    <!-- preloader -->
    <script src="/public/js/pace.min.js"></script>

    <!--- basic page needs -->
    <meta charset="utf-8">
    <title>carpooling - Login</title>

    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/carpooling.min.css">
</head>

<body>

    <div class="container-fluid" style="padding-top: 0">
        <div class="row">
            <div class="col-xs-12 text-center">
                <h1 class="text-center uppercase carpooling-title-sm adjusted-margin-and-spacing"><i class="fa fa-sign-in"></i> Inicio de
                    sesión</h1>
                <!-- LOGIN FORM -->
                </br>
                <form id="login-form" action="/login" method="post">
                    <label class="uppercase">Correo institucional</label>
                    <input type="text" class="input-margin-auto" name="email" placeholder="matricula@tec.mx">
                    <!-- show any messages that come back with authentication -->
                    <% if (message.length> 0) { %>
                        <h5><i class="fa fa-warning"></i>
                            <%= message %>
                        </h5>
                        <% } %>
                            <br>
                            <label class="uppercase">Contraseña</label>
                            <input type="password" class="input-margin-auto" name="password"
                                placeholder="**********"><br>
                            </br>
                            <button id="loginOrSignupBtn" type="submit" class="btn btn-main uppercase">Iniciar sesión
                            </button>
                </form>
                </br>
                </br>
                <hr>
                <p>¿Eres usuario nuevo? <a href="/signup">Crea tu cuenta</a>.</p>
                <p>o ve al <a href="/">Inicio</a>.</p>
            </div>
        </div>
    </div>

    <% include templates/preloader.ejs %>

        <script src="/public/js/jquery-2.1.3.min.js"></script>
        <script src="/public/js/main.js"></script>
        <script src="/public/js/jquery.js"></script>
        <script src="/public/js/bootstrap.js"></script>
        <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
        <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
        <script src="/public/js/login/validation.js"></script>

</body>

</html>