<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <!-- preloader -->
        <script src="https://cdn.jsdelivr.net/npm/pace-js@latest/pace.min.js"></script>

    <!--- basic page needs -->
    <meta charset="utf-8">
    <title>Erkab - Login</title>

    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/erkab.min.css">

    <!-- favicons -->
    <link rel="icon" type="image/png" href="/public/images/favicon-32x32.png" sizes="32x32"/>
    <link rel="icon" type="image/png" href="/public/images/favicon-16x16.png" sizes="16x16"/>
</head>

<body>

<div class="container-fluid" style="padding-top: 0">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1 class="text-center uppercase erkab-title-sm adjusted-margin-and-spacing"><i
                        class="fa fa-car"></i> Erkab</h1>
            <h1 class="text-center uppercase adjusted-margin-and-spacing"><i class="fa fa-sign-in"></i> Login</h1>
            <!-- LOGIN FORM -->
            <form id="login-form" action="/login" method="post">
                <label class="uppercase">Email</label>
                <input type="text" class="input-margin-auto" name="email" placeholder="Email">
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <h5><i class="fa fa-warning"></i> <%= message %></h5>
                <% } %>
                <br>
                <label class="uppercase">Password</label>
                <input type="password" class="input-margin-auto" name="password" placeholder="Password"><br>

                <button id="loginOrSignupBtn" type="submit" class="btn btn-main uppercase">Login</button>
            </form>
            <hr>
            <p>Need an account? <a href="/signup">Signup</a>.</p>
            <p>or go back <a href="/">home</a>.</p>
        </div>
    </div>
</div>

<% include templates/preloader.ejs %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/public/js/main.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/additional-methods.min.js"></script>
<script src="/public/js/login/validation.js"></script>

</body>
</html>
